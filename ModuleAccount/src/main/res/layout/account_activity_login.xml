<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/public_mar_left_150px"
        android:layout_marginRight="@dimen/public_mar_right_150px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/public_mar_bottom_100px"
            android:layout_marginTop="@dimen/public_mar_top_310px"
            android:text="@string/public_app_name"
            android:textSize="@dimen/public_font_36sp"
            android:textStyle="bold" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/public_outline_email_white_36" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_mar_left_10px"
                    android:hint="@string/public_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/public_white" />
            </android.support.design.widget.TextInputLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_mar_top_25px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/public_outline_lock_white_36" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_mar_left_10px"
                    android:hint="@string/public_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/public_white" />
            </android.support.design.widget.TextInputLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_mar_top_50px"
            android:gravity="center"
            android:padding="@dimen/public_padding_20px"
            android:text="@string/account_login"
            android:textAllCaps="true"
            android:textColor="@color/public_white"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_mar_top_50px"
            android:gravity="center"
            android:padding="@dimen/public_padding_20px"
            android:text="@string/account_sign_up"
            android:textAllCaps="true"
            android:textColor="@color/public_white"
            android:textStyle="bold" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_mar_top_50px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <View
                android:layout_width="0px"
                android:layout_height="@dimen/public_height_2px"
                android:layout_weight="1"
                android:background="@color/public_white" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/public_white" />

            <View
                android:layout_width="0px"
                android:layout_height="@dimen/public_height_2px"
                android:layout_weight="1"
                android:background="@color/public_white" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_mar_left_20px"
            android:layout_marginRight="@dimen/public_mar_right_20px"
            android:layout_marginTop="@dimen/public_mar_top_50px"
            android:gravity="center"
            android:orientation="vertical">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/public_facebook"
                android:gravity="center"
                android:padding="@dimen/public_padding_20px"
                android:text="@string/account_facebook"
                android:textAllCaps="true"
                android:textColor="@color/public_white"
                android:textStyle="bold"
                app:qmui_backgroundColor="@color/public_color_3B5998"
                app:qmui_isRadiusAdjustBounds="true" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/public_mar_top_50px"
                android:drawableStart="@drawable/public_google_plus"
                android:gravity="center"
                android:padding="@dimen/public_padding_20px"
                android:text="@string/account_google"
                android:textAllCaps="true"
                android:textColor="@color/public_white"
                android:textStyle="bold"
                app:qmui_backgroundColor="@color/public_color_DC4E41"
                app:qmui_isRadiusAdjustBounds="true" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/public_mar_top_70px"
            android:text="@string/account_forgot_password"
            android:textColor="@color/public_white" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>